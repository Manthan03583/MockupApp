<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/aliciaFragment"
    tools:context=".screens.AliciaProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Profile"
            app:titleTextColor="@color/white"
            app:menu="@menu/alicia_profile_toolbar_menu"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            android:background="@color/pink"
            android:theme="@style/AliciaProfileToolbarTheme" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/alicia_pic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alicia_keys"
            android:gravity="center_horizontal"
            android:textSize="36sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/san_francsico_ca"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/grey"
            />

        <GridView
            android:padding="26dp"
            android:id="@+id/button_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:verticalSpacing="16dp"
            android:horizontalSpacing="16dp"/>

    </LinearLayout>

</FrameLayout>
